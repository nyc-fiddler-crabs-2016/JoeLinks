<section>
    <form id="new-post-form" method="POST" action="/posts">
       <input type="hidden" name="post[user_id]" value='<%= session[:user_id] %>'>


      <div>
         <input type="text" name="post[title]" placeholder="Title"
      </div>
      <div>
         <input type="text" name="post[url]" placeholder="Url"
      </div>

      <div>
        <TEXTAREA NAME="post[body]" COLS=40 ROWS=6 placeholder="Optional"></TEXTAREA>
      </div>
      <div>
        <input type="submit" value="Add Post">
      </div>
    </form>
</section>
