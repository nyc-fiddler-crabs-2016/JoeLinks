<section>

   <%= erb :'/posts/_post_item', locals: {post: @post} %>


    <form id="new-comment-form" method="POST" action="/comments">

      <input type="hidden" name="comment[user_id]" value="<%= session[:user_id] %>">
      <input type="hidden" name="comment[post_id]" value="<%= @post.id %>">

      <div>
        <TEXTAREA NAME="comment[body]" COLS=40 ROWS=6></TEXTAREA>
      </div>

      <div>
        <input type="submit" value="Add Comment">
      </div>
    </form>


   <section>
    <h3>Comments:</h3>
    <% @comments.each do |comment| %>
      <%= erb :'/comments/_comment_item', locals: {comment: comment} %>
    <%end%>
   </section>


</section>
